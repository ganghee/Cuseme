<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="searchViewModel"
            type="com.good.mycuseme.ui.manage.SearchViewModel" />
    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.manage.PreviewFragment">

        <include layout="@layout/toolbar_manager_search" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabIndicatorHeight="0dp"
            app:tabTextAppearance="@style/tab_text"
            app:tabSelectedTextColor="@color/mainpink"
            app:tabTextColor="@color/greyish_two" />

       <androidx.viewpager.widget.ViewPager
           android:id="@+id/vp_search"
           android:layout_height="match_parent"
           android:layout_width="match_parent" />

    </LinearLayout>
</layout>