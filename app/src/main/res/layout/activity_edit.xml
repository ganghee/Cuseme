<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="editViewModel"
            type="com.good.mycuseme.ui.card.EditViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:orientation="vertical">

        <include
            android:id="@+id/tb_update_card"
            layout="@layout/toolbar_card" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="12dp"
                tools:context=".ui.card.EditActivity">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="8dp"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/ll_update_default_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="70dp"
                            android:layout_marginTop="108dp"
                            android:layout_marginBottom="32dp"
                            android:contentDescription="TODO"
                            android:src="@drawable/ic_newcard_photo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="60dp"
                            android:text="@string/bring_picture_from_album"
                            android:textColor="@color/pinkish_grey_two"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_update_card"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="TODO"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <EditText
                    android:id="@+id/et_update_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/round_all_white_20"
                    android:padding="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/very_light_pink"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/cardView"
                    tools:layout_editor_absoluteX="20dp" />

                <EditText
                    android:id="@+id/et_update_card_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/round_all_white_20"
                    android:gravity="top"
                    android:padding="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/very_light_pink"
                    app:layout_constraintTop_toBottomOf="@+id/et_update_card_title" />


                <TextView
                    android:id="@+id/textView_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="12dp"
                    android:text="@string/record_text"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_update_card_content" />

                <ImageView
                    android:id="@+id/iv_update_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/selector_btn_auto_record"
                    app:layout_constraintBottom_toBottomOf="@+id/textView_edit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView_edit" />

                <TextView
                    android:id="@+id/tv_update_save_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/save_record"
                    android:textColor="@color/mainpink"
                    android:textSize="12sp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_edit" />

                <TextView
                    android:id="@+id/tv_update_no_record"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="8dp"
                    android:background="@color/white_two"
                    android:gravity="center"
                    android:text="@string/no_record"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_update_save_record" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_update"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8dp"
                    android:background="@drawable/round_all_white_20"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_update_save_record">

                    <ImageView
                        android:id="@+id/iv_update_stop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:background="@drawable/custom_ripple_effect_dark"
                        android:contentDescription="TODO"
                        android:padding="16dp"
                        android:src="@drawable/btn_newcard_play_unslected"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ProgressBar
                        android:id="@+id/progressbar_edit"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/timer_gray"
                        android:indeterminate="false"
                        android:max="10000"
                        android:progress="0"
                        android:progressDrawable="@drawable/timer_pink"
                        android:rotation="-90"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_update_save_record"
                        app:layout_constraintEnd_toStartOf="@+id/iv_update_save_record"
                        app:layout_constraintHorizontal_bias="0.575"
                        app:layout_constraintStart_toEndOf="@+id/iv_update_stop"
                        app:layout_constraintTop_toTopOf="@+id/iv_update_save_record" />

                    <TextView
                        android:id="@+id/tv_update_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ì´ˆ"
                        android:textSize="20sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/progressbar_edit"
                        app:layout_constraintEnd_toEndOf="@+id/progressbar_edit"
                        app:layout_constraintStart_toStartOf="@+id/progressbar_edit"
                        app:layout_constraintTop_toTopOf="@+id/progressbar_edit" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_update_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foreground="@drawable/custom_ripple_effect_dark"
                        android:visibility="visible"
                        app:cardCornerRadius="60dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/iv_update_start"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_ripple_effect_dark"
                            android:contentDescription="TODO"
                            android:src="@drawable/selector_btn_record_start" />

                    </androidx.cardview.widget.CardView>

                    <Button
                        android:id="@+id/iv_update_save_record"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/selector_btn_newcard_complete"
                        android:clickable="@{editViewModel.isSaveRecordClickable}"
                        android:foreground="@drawable/custom_ripple_effect_dark"
                        app:layout_constraintBottom_toBottomOf="@+id/cv_update_record"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/cv_update_record" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>