<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="manageViewModel"
            type="com.good.mycuseme.ui.manage.ManageCardViewModel" />
    </data>


    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/ml_manage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/activity_manage_xml_constraintlayout_scene"
        tools:context=".ui.manage.ManageCardActivity">

        <View
            android:id="@+id/view_manage_opaque"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CDFFFFFF"
            android:elevation="1dp"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/fl_manage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="52dp"
            android:background="@color/background_color" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fb_manage_add_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="20dp"
            android:outlineSpotShadowColor="@color/mainpink"
            android:src="@drawable/ic_add_32"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:maxImageSize="44dp" />

        <LinearLayout
            android:id="@+id/ll_manage_new_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_ripple_effect_blue"
            android:elevation="1dp"
            android:orientation="horizontal"
            android:paddingVertical="4dp"
            android:paddingEnd="12dp">

            <ImageView
                android:id="@+id/iv_manage_newcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/btn_home_newcard" />

            <TextView
                android:id="@+id/tv_manage_newcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:text="@string/text_manage_new_card"
                android:textColor="@color/mainpink"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_manage_hidden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_ripple_effect_blue"
            android:elevation="1dp"
            android:orientation="horizontal"
            android:paddingVertical="4dp"
            android:paddingEnd="12dp">

            <ImageView
                android:id="@+id/iv_manage_hidden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/btn_home_download" />

            <TextView
                android:id="@+id/tv_manage_hidden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:text="@string/hide_card"
                android:textColor="@color/mainpink"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cv_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/border_top"
            android:paddingHorizontal="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/ll_bottom_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bottom_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_btn_tabbar_home" />

                <TextView
                    android:id="@+id/tv_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_preview"
                    android:textColor="@drawable/text_color_selector" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bottom_search"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/selector_btn_tabbar_cardcare" />

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_card_search"
                    android:textColor="@drawable/text_color_selector" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>