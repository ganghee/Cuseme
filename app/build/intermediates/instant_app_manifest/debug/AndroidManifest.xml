<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.good.mycuseme"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@drawable/img_splash_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/img_splash_logo"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.good.mycuseme.ui.card.HiddenCardActivity" >
        </activity>
        <activity android:name="com.good.mycuseme.ui.setting.PhoneNumberActivity" />
        <activity android:name="com.good.mycuseme.ui.setting.PasswordActivity" />
        <activity android:name="com.good.mycuseme.ui.setting.SettingActivity" />
        <activity android:name="com.good.mycuseme.ui.card.ContentCardActivity" >
        </activity>
        <activity
            android:name="com.good.mycuseme.ui.card.CreateActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.good.mycuseme.ui.card.DownloadActivity" />
        <activity android:name="com.good.mycuseme.ui.login.LoginActivity" />
        <activity
            android:name="com.good.mycuseme.ui.card.EditActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.good.mycuseme.ui.manage.ManageCardActivity"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.good.mycuseme.ui.home.HomeActivity" >
        </activity>

        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.good.mycuseme.lifecycle-process"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>